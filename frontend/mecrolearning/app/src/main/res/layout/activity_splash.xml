<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEF6F6"
    android:gravity="center"
    android:padding="16dp">

    <!-- Logo de l'application (image animÃ©e) -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <!-- Nom de l'application -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SkillBuilder"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- Message de bienvenue -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="338dp"
        android:layout_height="131dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome to SkillBuilder! Learn and progress at your own pace with interactive micro-courses designed to enhance your technical skills. Ready to get started?"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="18sp" />

    <!-- Bouton "Start" -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#171718"
        android:textColor="#FFFFFF" />

</LinearLayout>
