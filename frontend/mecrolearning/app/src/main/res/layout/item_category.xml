<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F5F5"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Conteneur pour chaque catégorie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="8dp"
        android:background="#DAF8F5"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Titre de la catégorie entouré d'un cadre -->
        <TextView
            android:id="@+id/CategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_frame"
            android:gravity="center"
            android:padding="8sp"
            android:text="Nom de la catégorie"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description de la catégorie -->
        <TextView
            android:id="@+id/CategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description de la catégorie"
            android:textColor="#555"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
